from file_utils import load_contacts, save_contacts

file_path = "contacts.txt"

def add_contact():
    name = input("Nome: ").strip()
    phone = input("Telefone: ").strip()
    contacts = load_contacts(file_path)

    for n, _ in contacts:
        if n.lower() == name.lower():
            print("Contacto já existe.")
            return

    contacts.append((name, phone))
    save_contacts(file_path, contacts)
    print("Contacto adicionado.")

def search_contact():
    search = input("Nome a procurar: ").strip().lower()
    contacts = load_contacts(file_path)
    found = False
    for name, phone in contacts:
        if search in name.lower():
            print(f"Encontrado -> Nome: {name} | Telefone: {phone}")
            found = True
    if not found:
        print("Contacto não encontrado.")

def edit_contact():
    search = input("Nome a editar: ").strip().lower()
    contacts = load_contacts(file_path)
    for i, (name, phone) in enumerate(contacts):
        if search == name.lower():
            new_phone = input("Novo telefone: ").strip()
